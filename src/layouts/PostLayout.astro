---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags } = post.data;
---

<BaseLayout title={title} description={description} pubDate={pubDate}>
  <article>
    <header style="margin-bottom: 2rem;">
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;">{title}</h1>
      <div style="color: #6b7280; font-size: 0.875rem; margin-bottom: 1rem;">
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </div>
      {tags.length > 0 && (
        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
          {tags.map(tag => (
            <span style="background: #e5e7eb; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.875rem; color: #374151;">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </header>
    
    <div class="prose">
      <slot />
    </div>
  </article>
  
  <style>
    .prose {
      line-height: 1.7;
      color: #1f2937;
    }
    
    .prose :global(h2) {
      font-size: 1.75rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: #111827;
    }
    
    .prose :global(h3) {
      font-size: 1.5rem;
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
      color: #111827;
    }
    
    .prose :global(p) {
      margin-bottom: 1rem;
    }
    
    .prose :global(ul), .prose :global(ol) {
      margin-left: 1.5rem;
      margin-bottom: 1rem;
    }
    
    .prose :global(li) {
      margin-bottom: 0.5rem;
    }
    
    .prose :global(code) {
      background: #f3f4f6;
      padding: 0.125rem 0.25rem;
      border-radius: 0.25rem;
      font-size: 0.875em;
      font-family: 'Courier New', monospace;
    }
    
    .prose :global(pre) {
      background: #1f2937;
      color: #f9fafb;
      padding: 1rem;
      border-radius: 0.5rem;
      overflow-x: auto;
      margin-bottom: 1rem;
    }
    
    .prose :global(pre code) {
      background: transparent;
      padding: 0;
    }
    
    .prose :global(blockquote) {
      border-left: 4px solid #e5e7eb;
      padding-left: 1rem;
      margin-left: 0;
      margin-bottom: 1rem;
      color: #6b7280;
    }
    
    .prose :global(a) {
      color: #2563eb;
      text-decoration: underline;
    }
    
    .prose :global(a:hover) {
      color: #1d4ed8;
    }
  </style>
</BaseLayout>
